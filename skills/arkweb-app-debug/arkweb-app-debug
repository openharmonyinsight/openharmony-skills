#!/usr/bin/env python3
"""
ArkWeb App Debug Tool - Wrapper Script

This wrapper allows running arkweb-app-debug without pip install.
Usage: ./arkweb-app-debug [command] [options]
"""

import sys
import os
from pathlib import Path

# Add the arkweb_app_debug package to Python path
SCRIPT_DIR = Path(__file__).parent.resolve()
sys.path.insert(0, str(SCRIPT_DIR))

# Import and run
if __name__ == "__main__":
    from arkweb_app_debug.cli import main
    sys.exit(main())
